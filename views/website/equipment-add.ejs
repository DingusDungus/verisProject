<%- include("admin-header", {title: title, name: name}); %>
<br>
<h1 style="margin-left: 30px;">Add equipment</h1>
<br>
<form style="margin-left: 30px; margin-right: 30px;" method="post" action="/add-equipment">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Write name" maxlength="20" required>
      <small id="passwordHelpBlock" class="form-text text-muted">
        Name of equipment wanted added to database, max 20 characters long
      </small>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" name="description" placeholder="Write description" maxlength="200" required>
      <small id="passwordHelpBlock" class="form-text text-muted">
        Description holds general info of item, max 200 characters long
      </small>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="text" class="form-control" id="quantity" name="quantity" placeholder="Write quantity" required>
      </div>
    <div class="col-auto my-1">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<%- include("footer"); %>
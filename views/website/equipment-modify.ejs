<%- include("admin-header", {title: title, name: name}); %>
<form style="margin-left: 30px; margin-right: 30px;" class="label-left" method="post" action="/modify-equipment">
        <legend>Modify equipment</legend>
        <div class="form-group">
            <label for="id">ID</label>
            <input class="form-control" id="id" type="text" name="id" readonly value= "<%= results.id %>">
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input id="name" class="form-control" type="text" name="name" value= "<%= results.e_name %>">
        </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input id="description" class="form-control" type="text" name="description" value = "<%= results.e_description %>">
          </div>
          <div class="col-auto my-1">
              <button type="submit" class="btn btn-primary">Submit</button>
          </div>
</form>
<%- include("footer"); %>